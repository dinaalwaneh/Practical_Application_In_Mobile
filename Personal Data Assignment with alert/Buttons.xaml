<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App5.Buttons"
             BackgroundColor="Black">
    <ContentPage.Content>
        <StackLayout Margin="20,300,20,20">
            <Button VerticalOptions="Center"   BackgroundColor="Transparent" BorderColor="White" BorderWidth="1.5"
                    CornerRadius="20"
                    Command="{Binding ButtonCommand}"
                    CommandParameter="Xamrain in Forms"
                    Clicked="Button_Clicked_1"
                    TextColor="White"
                    FontAttributes="Bold"
                    Text="View My Information"
                    FontSize="Medium"
                    WidthRequest="280"
                    HeightRequest="60"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>